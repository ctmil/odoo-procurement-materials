                        <field name="product_qty" string="product_qty"
                            />
                        <field name="product_uom" string="product_uom"
                            />
                    </group>
                    <group string="By object">
                    </group>
                </search>
            </field>
        </record>

        <!-- FORMVIEW -->
        <record id="view_procurement_materials_request.line_form" model="ir.ui.view">
            <field name="name">procurement_materials.request.line.form</field>
