            <field name="arch" type="xml">
                <form string="request.line" version="7.0">
                    <header>
                    </header>
                    <sheet string="request.line">
                       <div class="oe_right oe_button_box" name="buttons">
                       </div>
                     <group>
                        <field name="product_id"
                            /> 
                        <field name="product_qty"
                            /> 
                        <field name="product_uom"
                            /> 
                     </group>
                    </sheet>

                </form>
            </field>
        </record>

        <!-- TREEVIEW -->
        <record id="view_procurement_materials_request.line_tree" model="ir.ui.view">
            <field name="name">procurement_materials.request.line.tree</field>
            <field name="model">procurement_materials.request.line</field>
            <field name="arch" type="xml">
                <tree string="request.line"
                    colors=""
                    >
                    <field name="product_id"
                        />
                    <field name="product_qty"
                        />
                    <field name="product_uom"
                        />
                </tree>
            </field>
        </record>

    </data>
</openerp>
