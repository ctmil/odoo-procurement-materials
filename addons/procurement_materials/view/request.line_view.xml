<openerp>
    <data>
        <!-- SEARCH VIEW -->
        <record id="view_procurement_materials_request.line_filter" model="ir.ui.view">
            <field name="name">procurement_materials.request.line.select</field>
            <field name="model">procurement_materials.request.line</field>
            <field name="arch" type="xml">
                <search string="request.line" version="7.0">
                    <group string="By Attribute">
                        <field name="product_id" string="product_id"
